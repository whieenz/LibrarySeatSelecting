<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBkg"
    android:layout_gravity="center"
    android:paddingBottom="@dimen/activity_vertical_margin"

    android:orientation="vertical"
    tools:context="com.example.asus.libraryseatselecting.cancelActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/linearLayout">

        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/imageView3"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp"
            app:srcCompat="@drawable/userlogo" />

        <TextView
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:id="@+id/welcomeText"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:textSize="22dp"
            android:textColor="#ffffff"
            android:ems="10"
            android:inputType="textPersonName"
            android:editable="false"
            android:text="欢迎你" />

        <Button
            android:layout_marginLeft="100dp"
            android:layout_gravity="center_vertical"
            android:layout_width="22dp"
            android:layout_height="28dp"
            android:background="@drawable/map"
            android:onClick="locate"
            android:textSize="22dp"
            android:id="@+id/btnMap" />

        <Button
            android:text="注销"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="10dp"
            android:layout_gravity="center_vertical"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:background="#00ffffff"
            android:textColor="#fdfcfc"
            android:onClick="clickExit"
            android:textSize="22dp"
            android:id="@+id/btnExit" />


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="150dp"
        android:layout_marginBottom="150dp"
        android:id="@+id/linearLayout2">


    <TextView
        android:id="@+id/nameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_alignStart="@+id/cancel"
        android:layout_below="@+id/linearLayout"
        android:textSize="22dp"
        android:text="同学你好，你选择的座位是:" />

    <TextView
        android:id="@+id/roomText"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cancel"
        android:layout_below="@+id/linearLayout"
        android:textSize="22dp"
        android:text="综合阅览室" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout3">
        <TextView
            android:id="@+id/lineText"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/cancel"
            android:layout_below="@+id/linearLayout"
            android:textSize="22dp"
            android:text="" />
        <TextView
            android:id="@+id/spiltText"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/cancel"
            android:layout_below="@+id/linearLayout"
            android:textSize="22dp"
            android:text="，" />
        <TextView
            android:id="@+id/rowText"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/cancel"
            android:layout_below="@+id/linearLayout"
            android:textSize="22dp"
            android:text="" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView4"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/cancel"
        android:layout_below="@+id/linearLayout"
        android:textSize="22dp"
        android:layout_marginTop="40dp"
        android:text="已选座时间为：" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content"
        android:id="@+id/linearLayout8">
        <TextView
            android:id="@+id/hour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/cancel"
            android:layout_below="@+id/linearLayout"
            android:layout_gravity="center_horizontal"
            android:text="00"
            android:textSize="70dp" />
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/cancel"
            android:layout_below="@+id/linearLayout"
            android:layout_gravity="center_horizontal"
            android:text=":"
            android:textSize="70dp" />
        <TextView
            android:id="@+id/min"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/cancel"
            android:layout_below="@+id/linearLayout"
            android:layout_gravity="center_horizontal"
            android:text="00"
            android:textSize="70dp" />
        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/cancel"
            android:layout_below="@+id/linearLayout"
            android:layout_gravity="center_horizontal"
            android:text=":"
            android:textSize="70dp" />
        <TextView
            android:id="@+id/second"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignStart="@+id/cancel"
            android:layout_below="@+id/linearLayout"
            android:layout_gravity="center_horizontal"
            android:text="00"
            android:textSize="70dp" />
    </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/cancel"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="62dp"
        android:onClick="cancel"
        android:text="取 消 选 座"
        android:textColor="#fdfdfd"
        android:textSize="20dp"
        android:background="#d1ff244c"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>

